<html>
<body>
<style>
.ml11 {
  font-weight: 600;
  font-size: 2.5em;
}

.ml11 .text-wrapper {
  position: relative;
  display: inline-block;
  padding-top: 0.1em;
  padding-right: 0.05em;
  padding-bottom: 0.15em;
}

.ml11 .line {
  opacity: 0;
  position: absolute;
  left: 0;
  height: 100%;
  width: 3px;
  background-color:#000000;;
  transform-origin: 0 50%;
}

.ml11 .line1 { 
  top: 0; 
  left: 0;
  color:#000000;
}

.ml11 .letter {
  display: inline-block;
  line-height: 1em;
  color:#000000;
}
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<br>
<center>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
    <%= image_tag "f1.jpg",class:"d-block w-50" %>
    </div>
    <div class="carousel-item">
    <%= image_tag "f2.jpg",class:"d-block w-50" %>
    </div>
    <div class="carousel-item">
    <%= image_tag "f3.jpg",class:"d-block w-50" %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>
<br>
<h1 class="ml11">
<span class="text-wrapper">
  <span class="line line1"></span>
  <span class="letters">Find People Of Similar Interests Under One Roof</span>
</span>
</h1>
<br>
<div class="row row-cols-1 row-cols-md-2" style="margin-left:2vw;margin-right:2vw;">
  <div class="col mb-4">
  <%= link_to categories1_path(id:1) do %>
    <div class="card">
    <center>
    <%= image_tag "sports.jpg",class:"card-img-top",style:'height:15vw;width:20vw;'%></center>
      <div class="card-body" ,style="text-decoration:none;">
        <h5 class="card-title" style="text-decoration:none;">Sports</h5>
        <p class="card-text" ,style="text-decoration:none;">People having the similar interests in sports can connect with each other.</p>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col mb-4">
  <%= link_to categories1_path(id:2) do %>
    <div class="card">
    <center>
    <%= image_tag "arts.jpg",class:"card-img-top",style:'height:15vw;width:20vw;'%></center>
      <div class="card-body">
        <h5 class="card-title">Arts & Crafts</h5>
        <p class="card-text">People having the similar interests in arts&crafts can connect with each other.</p>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col mb-4">
  <%= link_to categories1_path(id:3) do %>
    <div class="card">
    <center>
    <%= image_tag "tech.jpg",class:"card-img-top",style:'height:15vw;width:20vw;'%></center>
      <div class="card-body">
        <h5 class="card-title">Technology</h5>
        <p class="card-text">People having the similar interests in technology can connect with each other.</p>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col mb-4">
  <%= link_to categories1_path(id:4) do %>
    <div class="card">
    <center>
    <%= image_tag "automobiles.jpg",class:"card-img-top",style:'height:15vw;width:20vw;'%></center>
      <div class="card-body">
        <h5 class="card-title">Automobiles</h5>
        <p class="card-text">People having the similar interests in automobiles can connect with each other.</p>
      </div>
    </div>
    <% end %>
  </div>
</div>

</center>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
<script>// Wrap every letter in a span
var textWrapper = document.querySelector('.ml11 .letters');
textWrapper.innerHTML = textWrapper.textContent.replace(/([^\x00-\x80]|\w)/g, "<span class='letter'>$&</span>");

anime.timeline({loop: true})
  .add({
    targets: '.ml11 .line',
    scaleY: [0,1],
    opacity: [0.5,1],
    easing: "easeOutExpo",
    duration: 700
  })
  .add({
    targets: '.ml11 .line',
    translateX: [0, document.querySelector('.ml11 .letters').getBoundingClientRect().width + 10],
    easing: "easeOutExpo",
    duration: 700,
    delay: 100
  }).add({
    targets: '.ml11 .letter',
    opacity: [0,1],
    easing: "easeOutExpo",
    duration: 600,
    offset: '-=775',
    delay: (el, i) => 34 * (i+1)
  }).add({
    targets: '.ml11',
    opacity: 0,
    duration: 1000,
    easing: "easeOutExpo",
    delay: 1000
  });
  </script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</body>
</html>
