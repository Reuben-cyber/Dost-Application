<html>
<head>
<style>
.capi{
  text-transform: uppercase;
}
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 6px 4px;
  cursor: pointer;
  -webkit-transition-duration: 0.4s; /* Safari */
  transition-duration: 0.4s;
  width:150px;
}
.button2:hover {
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
}
</style>
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<body>
<center>
<h1>Suggestion Of Friends With Similar Interest</h1>
<br>
<table>
  <tr>
    <th>&nbsp&nbsp&nbsp&nbsp User Name</th>
    <th>&nbsp&nbsp&nbsp&nbsp Match Percentage</th>
    <th>&nbsp&nbsp&nbsp&nbsp Common Interests</th>
    <th>&nbsp&nbsp&nbsp&nbsp Connect</th>
  </tr>
  <% @otherusers.each do |u| %>
    <tr>
    <% if(@similarity_percent[u.id] != 0.0 && @similar_category_record[u.id]!= nil )%>
    <td class="capi">&nbsp&nbsp&nbsp&nbsp<%=u.name%></td>
    <td>&nbsp&nbsp&nbsp&nbsp<%=@similarity_percent[u.id]%></td>
    <td>&nbsp&nbsp&nbsp&nbsp<%=@similar_category_record[u.id]%></td>
    <td>&nbsp&nbsp&nbsp&nbsp<button class="button button2">Contact</button></td>
    <%else%>
    <% end%>
    </tr>
  <% end %>
</table>
<br>
<br>
<h1>Suggestion Of Friends With Other Interest</h1>
<br>
<table>
  <tr>
    <th>&nbsp&nbsp&nbsp&nbsp User Name</th>
    <th>&nbsp&nbsp&nbsp&nbsp Interests</th>
    <th>&nbsp&nbsp&nbsp&nbsp Connect</th>
  </tr>
  <% @otherusers.each do |u| %>
    <% home=Home.where(user_id:u.id).take%>
    <td class="capi">&nbsp&nbsp&nbsp&nbsp<%=u.name%></td>
    <td>&nbsp&nbsp&nbsp&nbsp<%=home.category.name%></td>
    <td>&nbsp&nbsp&nbsp&nbsp<button class="button button2">Contact</button></td>
    </tr>
  <% end %>
</table>
</center>
</body>
</html>

